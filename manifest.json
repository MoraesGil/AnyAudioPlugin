{
  "Version": "2.2.0",
  "Author": "moraesdev",
  "Name": "AnySound",
  "Description": "Professional audio device switcher via Hammerspoon API",
  "Icon": "assets/icons/icon_plugin.svg",
  "UUID": "com.moraes.anysound",
  "Category": "Audio",
  "CategoryIcon": "assets/icons/icon_category.svg",
  "CodePath": "dist/app.js",
  "Type": "JavaScript",
  "PrivateAPI": false,
  "SupportedInMultiActions": false,
  "Actions": [
    {
      "Name": "Set Input Device",
      "Tooltip": "Switch to a specific input device (microphone)",
      "Icon": "assets/actions/input/icon_input.svg",
      "UUID": "com.moraes.anysound.input",
      "PropertyInspectorPath": "property-inspector/input/inspector.html",
      "state": 0,
      "States": [
        {
          "Image": "assets/actions/input/input_inactive.svg"
        },
        {
          "Image": "assets/actions/input/input_active.svg"
        },
        {
          "Image": "assets/actions/input/input_muted.svg"
        }
      ],
      "SupportedInMultiActions": false
    },
    {
      "Name": "Set Output Device",
      "Tooltip": "Switch to a specific output device (speaker/headphones)",
      "Icon": "assets/actions/output/icon_output.svg",
      "UUID": "com.moraes.anysound.output",
      "PropertyInspectorPath": "property-inspector/output/inspector.html",
      "state": 0,
      "States": [
        {
          "Image": "assets/actions/output/output_inactive.svg"
        },
        {
          "Image": "assets/actions/output/output_active.svg"
        },
        {
          "Image": "assets/actions/output/output_muted.svg"
        }
      ],
      "SupportedInMultiActions": false
    },
    {
      "Name": "Microphone Mute Toggle",
      "Tooltip": "Toggle microphone mute/unmute (independent of device switching)",
      "Icon": "assets/actions/micmute/icon_micmute.svg",
      "UUID": "com.moraes.anysound.micmute",
      "state": 1,
      "States": [
        {
          "Image": "assets/actions/micmute/micmute_inactive.svg"
        },
        {
          "Image": "assets/actions/micmute/micmute_active.svg"
        }
      ],
      "SupportedInMultiActions": false
    },
    {
      "Name": "Output Mute Toggle",
      "Tooltip": "Toggle output (speaker/headphones) mute/unmute (independent of device switching)",
      "Icon": "assets/actions/outputmute/icon_outputmute.svg",
      "UUID": "com.moraes.anysound.outputmute",
      "state": 1,
      "States": [
        {
          "Image": "assets/actions/outputmute/outputmute_inactive.svg"
        },
        {
          "Image": "assets/actions/outputmute/outputmute_active.svg"
        }
      ],
      "SupportedInMultiActions": false
    },
    {
      "Name": "Caffeine Mode",
      "Tooltip": "Prevent system sleep only; display can dim/sleep to save power. Toggle ON/OFF.",
      "Icon": "assets/actions/caffeine/icon_caffeine.svg",
      "UUID": "com.moraes.anysound.caffeine",
      "state": 0,
      "States": [
        {
          "Image": "assets/actions/caffeine/caffeine_off.svg"
        },
        {
          "Image": "assets/actions/caffeine/caffeine_on.svg"
        }
      ],
      "SupportedInMultiActions": false
    },
    {
      "Name": "LLM Toggle",
      "Tooltip": "Start/Stop local LLM servers (vllm-mlx). Supports multiple models on different ports.",
      "Icon": "assets/actions/llmtoggle/icon_llm.svg",
      "UUID": "com.moraes.anysound.llmtoggle",
      "PropertyInspectorPath": "property-inspector/llmtoggle/inspector.html",
      "state": 0,
      "States": [
        {
          "Image": "assets/actions/llmtoggle/llm_off.svg"
        },
        {
          "Image": "assets/actions/llmtoggle/llm_on.svg"
        },
        {
          "Image": "assets/actions/llmtoggle/llm_loading.svg"
        }
      ],
      "SupportedInMultiActions": false
    },
    {
      "Name": "LLM Status",
      "Tooltip": "Show LLM dashboard: which models are running (green) and stopped (red) with RAM and engine info.",
      "Icon": "assets/actions/llmstatus/icon_llmstatus.svg",
      "UUID": "com.moraes.anysound.llmstatus",
      "state": 0,
      "States": [
        {
          "Image": "assets/actions/llmstatus/llmstatus_default.svg"
        }
      ],
      "SupportedInMultiActions": false
    },
    {
      "Name": "CPU Temp",
      "Tooltip": "CPU temperature monitor. Green=ok, yellow=medium, orange=hot, red=danger. Press for legend and last reading.",
      "Icon": "assets/actions/cputemp/icon_cputemp.svg",
      "UUID": "com.moraes.anysound.cputemp",
      "state": 0,
      "States": [
        { "Image": "assets/actions/cputemp/cputemp_green.svg" },
        { "Image": "assets/actions/cputemp/cputemp_yellow.svg" },
        { "Image": "assets/actions/cputemp/cputemp_orange.svg" },
        { "Image": "assets/actions/cputemp/cputemp_red.svg" },
        { "Image": "assets/actions/cputemp/cputemp_critical.svg" }
      ],
      "SupportedInMultiActions": false
    }
  ],
  "OS": [
    {
      "Platform": "mac",
      "MinimumVersion": "10.15"
    }
  ],
  "Software": {
    "MinimumVersion": "1.0.0"
  }
}
